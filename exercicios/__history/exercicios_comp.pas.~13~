procedure TForm1.Button8Click(Sender: TObject); //exercicio 08
var verificar01, total, total01: Currency;
begin
  if (Editexer_08.Text='') then
  begin
    MessageDlg('Não foi inserido um valor',mtError,[mbYes],0);
    exit;
  end;
  verificar01 := StrToCurr(Editexer_08.Text);
  total := sqrt(verificar01);
  if total > 0 then
  begin
    ShowMessage('A raiz quadrado do número '+CurrToStr(verificar01)+' é positiva '+CurrToStr(total));
  end
  else if (total < 0) then
  begin
    total01 := total * total;
    ShowMessage('A raiz quadrado do número '+CurrToStr(verificar01)+' é negativa, elevado ao qudrado é '+CurrToStr(total01));
  end;
end;

