procedure TForm1.Button20Click(Sender: TObject);//exercicio 21
var v1, v2, v3: integer;
begin
  if ((Editexer21_v1.Text='') or (Editexer21_v2.text ='') or (Editexer21_v3.Text='')) then
  begin
    MessageDlg('Não foi inserido um valor em um dos campos',mtError,[mbYes],0);
    exit;
  end;
  v1 := strtoint(Editexer21_v1.Text);
  v2 := strtoint(Editexer21_v2.Text);
  v3 := strtoint(Editexer21_v3.Text);
  if v1 >= v2 then
  begin
    if v1 >= v3 then
    begin
      ShowMessage('O maior número digito é: ' + inttostr(v1));
    end;
  end;
  if v2 >= v1 then
  begin
    if v2 >= v3 then
    begin
      ShowMessage('O maior número digito é: ' + inttostr(v2));
    end;
  end;
  if v3 > v1 then
  begin
    if v3 > v2 then
    begin
      ShowMessage('O maior número digito é: ' + inttostr(v3));
    end;
  end;
end;

