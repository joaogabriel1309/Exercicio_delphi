procedure TForm1.Button22Click(Sender: TObject);//exercicio 23
var valor : array [1..3] of integer;
  I,maiorvalor,menorvalor,valormedio: Integer;
begin
  if ((Editexer23_v1.Text='') or (Editexer23_v2.text ='') or (Editexer23_v3.Text='')) then
  begin
    MessageDlg('Não foi inserido um valor em um dos campos',mtError,[mbYes],0);
    exit;
  end;
  valor[1] := strtoint(Editexer23_v1.Text);
  valor[2] := strtoint(Editexer23_v2.Text);
  valor[3] := strtoint(Editexer23_v3.Text);
  caixadetexto.Lines.Clear;
  maiorvalor:= 0;
  menorvalor:= 100000000;
  for I := 1 to 3 do
  begin
    if (maiorvalor < valor[i]) then
    begin
      maiorvalor := valor[i];
    end
    else
    if (menorvalor > valor[i]) then
    begin
      menorvalor := valor[i];
    end
    else
    begin
    valormedio := valor[i];
    end;
  end;
  caixadetexto.Lines.Add(inttostr(maiorvalor));
  caixadetexto.Lines.Add(inttostr(valormedio));
  caixadetexto.Lines.Add(inttostr(menorvalor));
end;
//refazer
procedure TForm1.Button23Click(Sender: TObject);//exercicio 24
var v1, v2, v3: integer;
begin
  if ((Editexer24_v1.Text='') or (Editexer24_v2.text ='') or (Editexer24_v3.Text='')) then
  begin
    MessageDlg('Não foi inserido um valor em um dos campos',mtError,[mbYes],0);
    exit;
  end;
  v1 := strtoint(Editexer24_v1.Text);
  v2 := strtoint(Editexer24_v2.Text);
  v3 := strtoint(Editexer24_v3.Text);
  Memo24.Clear;
  if (v1 > v2) then
  begin
    if (v1 > v3) then
    begin
      if (v2 > v3) then
      begin
        Memo24.Lines.Add(inttostr(v1));
        Memo24.Lines.Add(inttostr(v2));
        Memo24.Lines.Add(inttostr(v3));
      end;
      if v3 > v2 then
      begin
        Memo24.Lines.Add(inttostr(v1));
        Memo24.Lines.Add(inttostr(v3));
        Memo24.Lines.Add(inttostr(v2));
      end;
    end;
  end;
  if v2 > v1 then
  begin
    if v2 > v3 then
    begin
      if v1 > v3 then
      begin
        Memo24.Lines.Add(inttostr(v2));
        Memo24.Lines.Add(inttostr(v1));
        Memo24.Lines.Add(inttostr(v3));
      end
      else
      begin
        Memo24.Lines.Add(inttostr(v2));
        Memo24.Lines.Add(inttostr(v3));
        Memo24.Lines.Add(inttostr(v1));
      end;
    end;
  end;
  if v3 > v2 then
  begin
    if v3 > v1 then
    begin
      if v1 > v2 then
      begin
        Memo24.Lines.Add(inttostr(v3));
        Memo24.Lines.Add(inttostr(v1));
        Memo24.Lines.Add(inttostr(v2));
      end;
      if v2 > v1 then
      begin
        Memo24.Lines.Add(inttostr(v3));
        Memo24.Lines.Add(inttostr(v2));
        Memo24.Lines.Add(inttostr(v1));
      end;
    end;
  end;
end;

procedure TForm1.Button24Click(Sender: TObject);//exercicio 25
var v1, v2, v3: integer;
begin
  if ((Editexer25_v1.Text='') or (Editexer25_v2.text ='') or (Editexer25_v3.Text='')) then
  begin
    MessageDlg('Não foi inserido um valor em um dos campos',mtError,[mbYes],0);
    exit;
  end;
  v1 := strtoint(Editexer25_v1.Text);
  v2 := strtoint(Editexer25_v2.Text);
  v3 := strtoint(Editexer25_v3.Text);
  if (v1 > v2) then
  begin
    if (v1 > v3) then
    begin
      if (v2 > v3) then
      begin
        editexer25_rece1.Text := (inttostr(v1));
        editexer25_rece2.Text := (inttostr(v2));
        editexer25_rece3.Text := (inttostr(v3));
      end;
      if v3 > v2 then
      begin
        editexer25_rece1.Text := (inttostr(v1));
        editexer25_rece2.Text := (inttostr(v3));
        editexer25_rece3.Text := (inttostr(v2));
      end;
    end;
  end;
  if v2 > v1 then
  begin
    if v2 > v3 then
    begin
      if v1 > v3 then
      begin
        editexer25_rece1.Text := (inttostr(v2));
        editexer25_rece2.Text := (inttostr(v1));
        editexer25_rece3.Text := (inttostr(v3));
      end
      else
      begin
        editexer25_rece1.Text := (inttostr(v2));
        editexer25_rece2.Text := (inttostr(v3));
        editexer25_rece3.Text := (inttostr(v1));
      end;
    end;
  end;
  if v3 > v2 then
  begin
    if v3 > v1 then
    begin
      if v1 > v2 then
      begin
        editexer25_rece1.Text := (inttostr(v3));
        editexer25_rece2.Text := (inttostr(v1));
        editexer25_rece3.Text := (inttostr(v2));
      end;
      if v2 > v1 then
      begin
        editexer25_rece1.Text := (inttostr(v3));
        editexer25_rece2.Text := (inttostr(v2));
        editexer25_rece3.Text := (inttostr(v1));
      end;
    end;
  end;
end;

procedure TForm1.Button25Click(Sender: TObject);//exercicio 28
var v1,v2,v3: integer;
begin
  if ((Editexer28_v1.Text='') or (Editexer28_v2.text ='') or (Editexer28_v3.Text='')) then
  begin
    MessageDlg('Não foi inserido um valor em um dos campos',mtError,[mbYes],0);
    exit;
  end;
  v1:= strtoint(Editexer28_v1.Text);
  v2:= strtoint(Editexer28_v2.Text);
  v3:= strtoint(Editexer28_v3.Text);
  if (v1=v2) and (v1=v3) and (v2=v3) then
  begin
    ShowMessage('Temos um triangulo do tipo equiláteros: todos os lados concruentes');
  end
  else
  if (v1=v2) or (v1=v3) or (v2=v3) then
  begin
    ShowMessage('Temos um triangulo do tipo isosceles: dois lados concruentes');
  end
  else
  begin
    ShowMessage('Temos um triangulo do tipo ascaleno: todos os lados com medidas distintas');
  end;
end;

procedure TForm1.Button26Click(Sender: TObject);//exercicio 29
var v1,v2,v3,result: integer;
begin
  if ((Editexer29_v1.Text='') or (Editexer29_v2.text ='') or (Editexer29_v3.Text='')) then
  begin
    MessageDlg('Não foi inserido um valor em um dos campos',mtError,[mbYes],0);
    exit;
  end;
  v1:= strtoint(Editexer29_v1.Text);
  v2:= strtoint(Editexer29_v2.Text);
  v3:= strtoint(Editexer29_v3.Text);
  result:= v1+v2+v3;
  if (result=90) then
  begin
    ShowMessage('OK, Temos um trinagulo retângulo');
    exit;
  end;
  if (result<90) then
  begin
    ShowMessage('OK, temos um trinagulo acuângulo');
  end
  else
  begin
    ShowMessage('OK, Temos um trinagulo obtusângulo');
  end;
end;
